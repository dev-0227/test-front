<div class="d-flex flex-column flex-root">
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="d-flex flex-column flex-lg-row-fluid py-10">
            <div class="d-flex flex-center flex-column flex-column-fluid">
                <div class="w-lg-500px p-10 p-lg-15 mx-auto">
                    <form class="form w-100" novalidate="novalidate" id="kt_sign_in_form"  action="#">
                        <div class="text-center mb-10">
                            <h1 class="text-gray-900 mb-3">Sign In</h1>
                            <div class="text-gray-500 fw-semibold fs-4">New Here? 
                            <a href="signup" class="link-primary fw-bold">Create an Account</a></div>
                        </div>
                        <div class="fv-row mb-10">
                            <label class="form-label fs-6 fw-bold text-gray-900">Email</label>
                            <input class="form-control" type="text" id="email"  />
                        </div>
                        <div class="fv-row mb-10">
                            <div class="d-flex flex-stack mb-2">
                                <label class="form-label fw-bold text-gray-900 fs-6 mb-0">Password</label>
                                <a href="forgot" class="link-primary fs-6 fw-bold">Forgot Password ?</a>
                            </div>
                            <div class="input-group fv-row mb-10">
                                <input class="form-control" type="password" id="password" autocomplete="off"  aria-describedby="password-addon" data-view="0"/>
                                <span class="input-group-text" id="password-addon">
                                    <i class="ki-duotone ki-eye fs-1 cursor-pointer eye-icon" ><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                </span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="button" click="btnClick()" class="btn btn-lg btn-primary w-100 mb-5" id="login">
                                <span class="indicator-label">Continue</span>
                                <span class="indicator-progress">Please wait... 
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>